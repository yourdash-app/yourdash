{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "sourceMap": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "rootDir": "../..",
    "traceResolution": true,
    "strict": true
  },
  "include": [
    "./src/**/*.ts",
    "../../packages/shared/**/*.ts",
    "../../applications/**/backend/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
